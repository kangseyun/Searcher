<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.monad.searcher.Activity.ConditionStockActivity"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#34515e"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:padding="10dp"
            android:text="Hello World"
            android:id="@+id/condition_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="18dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/condition_stock_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="단기간 주식 성장률 TOP5"
            android:textSize="20dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_stock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/refresh"
        android:background="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="갱신"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
